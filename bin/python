#!/usr/bin/python

import sys

sys.path[0:0] = [
  '/home/cyface/Applications/eclipse-py/workspace/podiobooks/src',
  '/home/cyface/Applications/eclipse-py/workspace/podiobooks/eggs/django_authopenid-1.0.1-py2.6.egg',
  '/home/cyface/Applications/eclipse-py/workspace/podiobooks/eggs/django_sphinx-2.1.2-py2.6.egg',
  '/home/cyface/Applications/eclipse-py/workspace/podiobooks/eggs/django_tinymce-1.5-py2.6.egg',
  '/home/cyface/Applications/eclipse-py/workspace/podiobooks/eggs/python_openid-2.2.4-py2.6.egg',
  '/home/cyface/Applications/eclipse-py/workspace/podiobooks/eggs/docutils-0.6-py2.6.egg',
  '/home/cyface/Applications/eclipse-py/workspace/podiobooks/eggs/httplib2-0.5.0-py2.6.egg',
  '/home/cyface/Applications/eclipse-py/workspace/podiobooks/eggs/Django-1.1.1-py2.6.egg',
  '/home/cyface/Applications/eclipse-py/workspace/podiobooks/eggs/django_registration-0.7-py2.6.egg',
  '/home/cyface/Applications/eclipse-py/workspace/podiobooks/eggs/setuptools-0.6c11-py2.6.egg',
  ]

_interactive = True
if len(sys.argv) > 1:
    _options, _args = __import__("getopt").getopt(sys.argv[1:], 'ic:m:')
    _interactive = False
    for (_opt, _val) in _options:
        if _opt == '-i':
            _interactive = True
        elif _opt == '-c':
            exec _val
        elif _opt == '-m':
            sys.argv[1:] = _args
            _args = []
            __import__("runpy").run_module(
                 _val, {}, "__main__", alter_sys=True)

    if _args:
        sys.argv[:] = _args
        __file__ = _args[0]
        del _options, _args
        execfile(__file__)

if _interactive:
    del _interactive
    __import__("code").interact(banner="", local=globals())
